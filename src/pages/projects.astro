---
import DefaultLayout from "../layouts/DefaultLayout.astro";

interface Projects {
  name: string;
  url: string;
  stack: string[];
  timeframe: string;
}

interface OpenSource {
  name: string;
  url: string;
  stack: string[];
  timeframe: string;
}

const projects: Projects[] = [
  {
    name: "Gradient Card",
    url: "https://github.com/alexwkleung/gradient-card",
    stack: ["React", "TypeScript", "Motion", "Tailwind"],
    timeframe: "2025",
  },
  {
    name: "Block URL",
    url: "https://github.com/alexwkleung/block-url-extension",
    stack: ["React", "TypeScript", "Tailwind", "MUI"],
    timeframe: "2025",
  },
  {
    name: "Iris",
    url: "https://github.com/alexwkleung/Iris",
    stack: ["TypeScript", "Rust", "Electron"],
    timeframe: "2022 - 2024",
  },
  {
    name: "TermStylist",
    url: "https://github.com/alexwkleung/TermStylist",
    stack: ["C++"],
    timeframe: "2022",
  },
];

const openSource: OpenSource[] = [
  {
    name: "Visual Studio Code Documentation",
    url: "https://github.com/microsoft/vscode-docs/pulls?q=is%3Apr+author%3Aalexwkleung+is%3Aclosed",
    stack: ["Markdown", "Git"],
    timeframe: "2023 - 2024",
  },
];
---

<DefaultLayout>
  <div slot="page-heading">PROJECTS</div>
  <div slot="page-content">
    <p class="projects-paragraph text">
      My personal projects. All public projects can be found on my <a
        href="https://github.com/alexwkleung"
        target="_blank">GitHub</a
      >.
    </p>
    <p class="projects-paragraph text">
      You can support my work on <a href="https://github.com/sponsors/alexwkleung/" target="_blank"
        >GitHub Sponsors</a
      > or <a href="https://ko-fi.com/alexwkleung" target="_blank">Ko-Fi</a>.
    </p>
    {
      projects.map((project) => (
        <p class="projects-paragraph">
          <a href={project.url} class="project-url" target="_blank">
            <span class="project-name">{project.name}</span>
          </a>
          <span class="project-stack">{project.stack.join(", ").toUpperCase()}</span>
          <span class="project-timeframe">{project.timeframe}</span>
        </p>
      ))
    }
    <div class="open-source-heading text">
      <div>OPEN SOURCE</div>
    </div>
    <p class="projects-paragraph text">My open-source contributions.</p>
    {
      openSource.map((org) => (
        <p class="projects-paragraph">
          <a href={org.url} class="project-url" target="_blank">
            <span class="project-name">{org.name}</span>
          </a>
          <span class="project-stack">{org.stack.join(", ").toUpperCase()}</span>
          <span class="project-timeframe">{org.timeframe}</span>
        </p>
      ))
    }
  </div>
</DefaultLayout>
